<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valkyria.trebusz.AuthorsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/authors_version_txt"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_authors_version_txt" />

        <TextView
            android:id="@+id/authors_version_number"
            android:layout_toRightOf="@+id/authors_version_txt"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_authors_version_number" />

        <TextView
            android:id="@+id/authors_createdby"
            android:textSize="20sp"
            android:layout_below="@+id/authors_version_txt"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by:" />

        <TextView
            android:id="@+id/authors_Valkyria_Team"
            android:layout_below="@+id/authors_createdby"
            android:layout_marginTop="180dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="@string/fragment_authors_authors" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logovalkyria" />


    </RelativeLayout>
</ScrollView>